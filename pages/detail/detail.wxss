.main{
  padding: 10rpx;
  color: #666;
}
.video_info{
  margin-top: 10rpx;
}.video_info video{
 width: 100%;}
.video_title{
display: flex;
justify-content: space-between;
font-size: 25rpx;
}
.video-detail {
 color: #000;
 margin-top: 5rpx;
 font-size: 28rpx;
}
.video-detail text{
  margin-left: 15rpx;
}
.video-detail .author{
 color: #000;
}
.other_list{
  margin-top: 10rpx;
  display: flex;
  flex-flow: row;
}
.tem_other{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.other_img_wrap{
  width: 38%;
  display: flex;
  justify-content: center;
  align-content: center;
}
.other_img_wrap image{
  width: 90%;
  border-radius: 15rpx;
}
